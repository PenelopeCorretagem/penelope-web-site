{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "printWidth": 80,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "jsxSingleQuote": true,
  "quoteProps": "as-needed",
  "useTabs": false,
  "plugins": ["prettier-plugin-tailwindcss"],
  "jsxParens": "always",
  "overrides": [
    {
      "files": "*.jsx",
      "options": {
        "jsxBracketSameLine": false,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "printWidth": 80,
        "parser": "babel"
      }
    }
  ]
}
